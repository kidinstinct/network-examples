hostname s1-bgw1

feature pim
feature ospf
feature interface-vlan
feature bgp
feature isis
feature vn-segment-vlan-based
feature nv overlay
nv overlay evpn
feature fabric forwarding

vlan 100
  vn-segment 100100
vlan 101
  vn-segment 100101
vlan 501
  vn-segment 50001

evpn multisite border-gateway 1
  delay-restore time 300

vrf context TENANT1
  vni 50001
  rd auto
  address-family ipv4 unicast
    route-target both auto
    route-target both auto evpn

route-map DIRECT-TO-OSPF permit 10
  match interface Ethernet1/5
  set metric-type type-1

router ospf UNDERLAY
  router-id 192.168.255.10
  redistribute direct route-map DIRECT-TO-OSPF

interface loopback0
  ip address 192.168.255.10/32 tag 12
  ip router ospf UNDERLAY area 0.0.0.0
  ip pim sparse-mode

interface loopback100
  description Loopback for EVPN Border Gateway
  ip address 192.168.12.10/32 tag 12
  ip router ospf UNDERLAY area 0.0.0.0

interface loopback1001
  description Loopback for EVPN Border Gateway Multi-Site
  vrf member TENANT1
  ip address 198.255.255.10/32

interface Vlan501
  no shutdown
  vrf member TENANT1
  ip forward

interface Ethernet1/1
  description Link to spine1
  mtu 9192
  medium p2p
  ip unnumbered loop0
  ip ospf network point-to-point
  ip router ospf UNDERLAY area 0.0.0.0
  ip pim sparse-mode
  evpn multisite fabric-tracking
  no shutdown

interface Ethernet1/2
  description Link to spine2
  mtu 9192
  medium p2p
  ip unnumbered loop0
  ip ospf network point-to-point
  ip router ospf UNDERLAY area 0.0.0.0
  ip pim sparse-mode
  evpn multisite fabric-tracking
  no shutdown

interface Ethernet1/5
  description Link to s2-border1
  mtu 9192
  ip add 198.0.0.2/30
  no ip redirects
  evpn multisite dci-tracking
  no shutdown

ip pim rp-address 192.168.255.100 group-list 224.0.0.0/4
fabric forwarding anycast-gateway-mac 0000.0000.aaaa

interface nve1
  no shutdown
  host-reachability protocol bgp
  multisite border-gateway interface loopback100
  source-interface loopback0
  member vni 50001 associate-vrf
  member vni 100100
    mcast-group 239.0.0.100
    multisite ingress-replication
  member vni 100101
    mcast-group 239.0.0.100
    multisite ingress-replication

evpn
  vni 100100 l2
    rd auto
    route-target import auto
    route-target export auto
  vni 100101 l2
    rd auto
    route-target import auto
    route-target export auto

route-map DIRECT-TO-BGP permit 10
  match tag 12

route-map TENANT1_OVERLAY_SUBNETS permit 10
  match tag 100

router bgp 65000
  router-id 192.168.255.10
  address-family l2vpn evpn
  address-family ipv4 unicast
    redistribute direct route-map DIRECT-TO-BGP
  neighbor 192.168.255.1
    remote-as 65000
    update-source loopback0
    address-family l2vpn evpn
      send-community extended
  neighbor 192.168.255.2
    remote-as 65000
    update-source loopback0
    address-family l2vpn evpn
      send-community extended
  neighbor 192.168.12.110
    remote-as 65001
    update-source loopback100
    ebgp-multihop 5
    peer-type fabric-external
    address-family l2vpn evpn
      send-community extended
      rewrite-evpn-rt-asn
  neighbor 198.0.0.1
    remote-as 651001
    address-family ipv4 unicast
  vrf TENANT1
    address-family ipv4 unicast
      redistribute direct route-map TENANT1_OVERLAY_SUBNETS
      exit
    exit
  exit
